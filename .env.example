DATABASE_URL=postgresql://user:password@host:5432/snipurl
JWT_SECRET=replace-with-strong-secret
PASSWORD_PEPPER=optional-extra-secret
# LinkCraft Environment Variables Template
# Copy this file to .env.local and fill in your API keys

# Google Gemini AI (Required for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Security Services (Optional - will skip if not provided)
# Google Safe Browsing API (10,000 free requests/day)
GOOGLE_SAFE_BROWSING_API_KEY=your_google_safe_browsing_key_here

# Auth Token Lifetimes
JWT_ACCESS_EXPIRES_IN=15m
REFRESH_TOKEN_DAYS=30

